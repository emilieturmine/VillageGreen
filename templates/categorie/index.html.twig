{% extends 'base.html.twig' %}

{% block title %}
	Liste des categories
{% endblock %}

{% block body %}

	<div class="col-12">


		<h1 class="text-info text-center mt-5">
			Liste des categories
			<a href="{{ path('app_categorie_new') }}" class="btn btn-success  ml-5 mr-5 text-center">Ajouter</a>
		</h1>
		<div id="crud" class="col-12 text-center   mt-5">
			<table class="table">
				<thead class="table bg-info mt-5 text-white text-center">
					<tr>
						<th>Id</th>
						<th>Nom</th>
						<th>Photo</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody class="text-center ">
					{% for categorie in categories %}
						<tr>
							<td>{{ categorie.id }}</td>
							<td>{{ categorie.nom }}</td>
							<td>{{ categorie.photo }}</td>
							<td class="text-center">
								<a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class=" btn btn-info mr-5">Voir</a>
								<a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class=" btn btn-warning mr-5">Modifier</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>


		{% endblock %}
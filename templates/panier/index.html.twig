{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}
<h3>Votre panier</h3>
<table class="table">
<thead>
<tr>
<th>Produit</th>
<th>Prix</th>
<th>quantite</th>
<th>Total</th>
<th>Actions</th>
</tr>
</thead>
<tbody>
{%for element in dataPanier %}
<tr>
    <td>{{element.produit.libelle}}</td>
    <td>{{element.produit.prixUnitaire}}€</td>
    <td>{{element.quantite}}</td>
    <td >{{ element.quantite * element.produit.prixUnitaire }} €</td>
    <td>
    <a href="{{path("panier_add",{id:element.produit.id})}}"class="btn btn-success">Ajouter</a> 
    <a href="{{path("panier_remove",{id:element.produit.id})}}" class="btn btn-warning">retirer</a>
    <a href="{{path("panier_delete",{id:element.produit.id})}}" class="btn btn-danger">supprimer</a>
    </td>
</tr>
{%else%}
<tr>
<td colspan="5" class="text-center">Votre panier est vide</td>
</tr>
{%endfor%}
</tbody>
<tfoot>
<td colspan="3">Total</td>
<td class="text-end">{{total}}€</td>
<td><a href="{{path("app_home")}}"class="btn btn-success">Continuer mes achats</a> <td>
 <td><a href="{{path("panier_delete_all")}}"class="btn btn-danger">Vider mon panier</a> <td> 
</tfoot>
</table>

{% endblock %}

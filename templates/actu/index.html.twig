{% extends 'base.html.twig' %}

{% block title %}Liste des actualités
{% endblock %}

{% block body %}
	{{include ("./base/navbaradmin.html.twig")}}
	<div class="col-12">


		<h1 class="text-info text-center mt-5">
			Liste des actualités
			<a href="{{ path('app_actu_new') }}" class="btn btn-success  ml-5 mr-5 text-center">Ajouter</a>
		</h1>
		<div id="crud" class="col-12 text-center   mt-5">


			<table class="table">
				<thead class="table bg-info mt-5 text-white text-center">
				<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Type</th>
				<th>Date</th>

				<th>actions</th>
			</tr>
		</thead>
		<tbody class="text-center ">
			{% for actu in actus %}
				<tr>
					<td>{{ actu.id }}</td>
					<td>{{ actu.nom }}</td>
					<td>{{ actu.type }}</td>
					<td>{{ actu.date ? actu.date|date('Y-m-d H:i:s') : '' }}</td>
					<td class="text-center">
						<a href="{{ path('app_actu_show', {'id': actu.id}) }}" class=" btn btn-info mr-5">Voir</a>
						<a href="{{ path('app_actu_edit', {'id': actu.id}) }}" class=" btn btn-warning mr-5">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>

{% endblock %}

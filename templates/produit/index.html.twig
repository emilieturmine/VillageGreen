{% extends 'base.html.twig' %}

{% block title %}Catalogue Produit
{% endblock %}

{% block body %}
	{{include ("./base/navbaradmin.html.twig")}}
	<div class="col-12">


		<h1 class="text-info text-center mt-5">
			Liste des produits
			<a href="{{ path('app_produit_new') }}" class="btn btn-success  ml-5 mr-5 text-center">Ajouter</a>
		</h1>
		<div id="crud" class="col-12 text-center   mt-5">

			<table class="table">
				<thead class="table bg-info mt-5 text-white text-center">
					<tr>
						<th>Id</th>
						<th>Libelle</th>
						<th>PrixUnitaire</th>
						<th>Photo</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody class="text-center ">
					{% for produit in produits %}
						<tr>

							<td>{{ produit.id }}</td>
							<td>{{ produit.libelle }}</td>
							<td>{{ produit.prixUnitaire }}</td>
							<td>{{ produit.photo }}</td>

							<td class="text-center">
								<a href="{{ path('app_produit_show', {'id': produit.id}) }}" class=" btn btn-info mr-5">Details</a>
								<a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class=" btn btn-warning mr-5">Modifier</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="10">pas d'enregistrement</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>


		{% endblock %}